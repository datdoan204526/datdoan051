    <table class="table table1 table-bordered">
        <thead class="thead-dark">
            <tr border="1">
                <th scope="col">Mã đơn hàng</th>
                <th scope="col">Họ và Tên</th>
                <th scope="col">Địa chỉ</th>
                <th scope="col">Số điện thoại</th>
                <th scope="col">Sản phẩm</th>
                <th scope="col">Đơn giá</th>
                <th scope="col">Ngày đặt</th>
                <th scope="col">Trạng thái</th>
            </tr>
        </thead>
        <tbody>
            <% for (let i=0; i < orders.length; i++) { %>
            <tr>
                <th scope="row">
                    <%= i + 1 %>
                </th>
                <td>
                    <%= orders[i].fullName %>
                </td>
                <td>
                    <%= orders[i].address %>
                </td>
                <td>
                    <%= orders[i].phoneNumber %>
                </td>
                <td>
                    <% for (let j=0; j < orders[i].items.length; j++) { %>
                    <%= orders[i].items[j].product.name %> : số lượng <%= orders[i].items[j].quantity %><br>
                    <% } %>
                </td>
                <td>
                    <%= orders[i].totalAmount %> VND
                </td>
                <td>
                    <%= orders[i].orderPlacedAt.toLocaleDateString() %>
                </td>
                <% if(orders[i].status == 'approved'){ %>
                <td style="color: #17b978;" class="text-center">thành công</td>
                <% } else if(orders[i].status == 'rejected'){ %>
                <td style="color: #f0da16;" class="text-center">từ chối</td>
                <% } %>
            </tr>
            <% } %>
        </tbody>
    </table>
    






