      <main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4 border" style="background-color: #f8f9fa;">
        <div class="container1" style="background-color:white">
          <button type="button" class="btn btn-primary button1" onclick="location.reload()">
            <i class="fa-solid fa-rotate-right"></i>
            Tải lại
          </button>
          <!-- Trong trang donhang.ejs -->

          <table class="table table1 table-bordered">
            <thead>
              <tr>
                <th scope="col">Mã đơn hàng</th>
                <th scope="col">Họ và Tên</th>
                <th scope="col">Địa chỉ</th>
                <th scope="col">Số điện thoại</th>
                <th scope="col">Sản phẩm</th>
                <th scope="col">Đơn giá</th>
                <th scope="col">PT thanh toán</th>
                
                <th scope="col">Ngày đặt</th>
                <th scope="col">Tác vụ</th>
              </tr>
            </thead>
            <tbody>
              <% for (let i=0; i < orders.length; i++) { %>
                <tr>
                  <th scope="row">
                    <%= i + 1 %>
                  </th>
                  <td>
                    <%= orders[i].fullName %>
                  </td>
                  <td>
                    <%= orders[i].address %>
                  </td>
                  <td>
                    <%= orders[i].phoneNumber %>
                  </td>
                  <td>
                    <% for (let j=0; j < orders[i].items.length; j++) { %>
                      <%= orders[i].items[j].product.name %> : số lượng <%= orders[i].items[j].quantity %><br>
                          <% } %>
                  </td>
                  <td>
                    <%= orders[i].totalAmount %> VND
                  </td>
                  <td>
                    <%= orders[i].paymentMethod %>
                  </td>
                  <td>
                    <%= orders[i].orderPlacedAt.toLocaleDateString() %>
                  </td>
                  <td>
                    <div style="display:flex; ">
                      <!-- Điều này sẽ gọi hàm sendApprovalStatus khi nhấp vào biểu tượng "Từ chối" -->
                      <a class="icon_color1" href="#" onclick="sendApprovalStatus('<%= orders[i]._id %>', 'rejected')">
                        <i class="fa-regular fa-circle-xmark icon2"></i>
                      </a>
                      <!-- Điều này sẽ gọi hàm sendApprovalStatus khi nhấp vào biểu tượng "Đã duyệt" -->
                      <a class="icon_color2" href="#" onclick="sendApprovalStatus('<%= orders[i]._id %>', 'approved')">
                        <i class="fa-regular fa-circle-check icon3"></i>
                      </a>


                    </div>
                  </td>
                </tr>
                <% } %>
            </tbody>
          </table>


        </div>
      </main>
    </div>
